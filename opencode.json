{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode@latest"
  ],
  "model": "google/gemini-2.5-flash",
  "agent": {
    "janitor": {
      "description": "문서 정리 전문가. 파일을 스캔, 분류, 정리 계획을 수립합니다.",
      "mode": "subagent",
      "model": "google/gemini-2.5-flash",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "advisor": {
      "description": "문서 정리 계획 검토자 및 승인자. 계획의 안전성을 검토하고 승인을 제공합니다.",
      "mode": "subagent",
      "model": "google/gemini-2.5-flash",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  }
}
